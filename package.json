  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/addis-verify-sdk.git"
  },
  "homepage": "https://addisverify.com",
  "bugs": {
    "url": "https://github.com/your-org/addis-verify-sdk/issues"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",

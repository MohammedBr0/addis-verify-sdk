{
  "name": "@addis-verify/kyc-sdk",
  "version": "1.0.0",
  "type": "module",
  "description": "AddisVerify KYC Web SDK for identity verification - A comprehensive JavaScript/TypeScript SDK for integrating KYC verification flows",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "dev": "rollup -c -w",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "node test-node.js",
    "test:browser": "npm run build && open test-project/index.html",
    "link": "npm link",
    "unlink": "npm unlink",
    "start": "npm run build:watch"
  },
  "keywords": [
    "kyc",
    "identity",
    "verification",
    "sdk",
    "web",
    "react",
    "typescript",
